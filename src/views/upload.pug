extends base.pug

block content
    if errorMessage
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video File
        input(type="file", name="video", id="video", accept="video/*", required)
        //- 모델 부분과 error를 막기 위해 양쪽 동시에 max, minLength를 설정
        input(type="text", name="title", maxLength=80, placeholder="Title", required)
        input(type="text", name="description", minLength=20, placeholder="Description", required)
        input(type="text", name="hashtags", placeholder="Hashtags, separated by comma", required)
        input(type="submit", value="Upload Video")