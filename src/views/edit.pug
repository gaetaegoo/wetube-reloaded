extends base.pug

block content 
    h4 Update Video
    form(method="POST")
        input(type="text", name="title", value=video.title, required)
        input(type="text", name="description", value=video.description, minLength=20, placeholder="Description", required)
        //- hashtags는 array로 돼있기 때문에 format 필요 => value=video.hashtags.join()
        input(type="text", name="hashtags", value=video.hashtags.join(), placeholder="Hashtags, separated by comma", required)
        //- input(type="submit", value="Save")
        button Save